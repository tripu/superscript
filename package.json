{
  "name": "supers",
  "version": "0.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/tripu/superscript"
  },
  "homepage": "https://github.com/tripu/superscript/blob/master/.github/README.md",
  "author": {
    "name": "tripu",
    "email": "t@tripu.info",
    "url": "https://tripu.info/"
  },
  "description": "A library of miscellaneous JavaScript utilities",
  "license": "MIT",
  "main": "server.js",
  "files": [
    "utils.js",
    "superscript.js"
  ],
  "bugs": {
    "url": "https://github.com/tripu/superscript/issues",
    "email": "t@tripu.info"
  },
  "private": false,
  "preferGlobal": "false",
  "devDependencies": {
    "browserify": "16.2.3",
    "coveralls": "3.0.2",
    "eslint": "5.9.0",
    "eslint-plugin-node": "8.0.0",
    "jsdoc-to-markdown": "5.0.3",
    "jshint": "2.9.6",
    "mocha": "5.2.0",
    "nyc": "13.1.0"
  },
  "scripts": {
    "audit": "npm audit",
    "lint": "eslint server.js utils.js tests.js",
    "hint": "jshint server.js utils.js tests.js",
    "test": "nyc --reporter=html --reporter=text mocha \"tests.js\" --timeout 2000 --reporter spec --colors",
    "browserify": "browserify server.js -s superscript -o superscript.js",
    "jsdoc": "jsdoc2md server.js | sed 's/^### $//' > .github/README.md",
    "build": "npm run audit && npm run lint && npm run hint && npm test && npm run browserify && npm run jsdoc",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": "8 || 10",
    "npm": "6"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "mocha": true
    },
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-eval": "error",
      "no-implied-eval": "error"
    }
  },
  "jshintConfig": {
    "esversion": 6,
    "strict": true
  },
  "nyc": {
    "include": [
      "server.js",
      "utils.js"
    ]
  },
  "jsdoc2md": {
    "template": "template.hbs",
    "global-index-format": "grouped",
    "example-lang": "js",
    "heading-depth": "3",
    "param-list-format": "list"
  }
}
